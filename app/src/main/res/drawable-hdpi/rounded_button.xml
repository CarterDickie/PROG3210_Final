<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:endColor="@color/colorAccentA" android:startColor="@color/colorTextB" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <solid android:color="@color/colorAccentA" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryA" android:startColor="@color/colorAccentA" />
        </shape>
    </item>
</selector>